<div class="container">
  <%= link_to('New article', new_account_post_path, class: "btn btn-default") %>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th colspan="3" align="right"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to(post.title, account_post_path(post)) %></td>
          <td align="right"><%= post.created_at.strftime("%B %d, %Y %R") %></td>
          <td align="right"><%= link_to('Edit', edit_account_post_path(post)) %></td>
          <td align="right"><%= link_to('Delete', account_post_path(post), :method => :delete, :data => {:confirm => "This article will be deleted, confirm?"} )%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
